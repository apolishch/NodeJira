extends layout

block content
  div.page-header
    h1.header Jira Login
  div.row
    form#login-form.form-horizontal.container(method="post", action="/login")
      mixin text_control("username", "Username", null)
      mixin text_control("password", "Password", null, {type: 'password'})
      .controls
        - if(typeof(error) != 'undefined')
          p.error #{error}
        button.btn-primary#login Login
