extends layout

block content
  div.page-header
    h1.header Search
  br
  br
  br
  div.row
    ul
      li#key_search_tab Key
      li#jql_tab JQL
      li#builder_tab Query Builder
  br
  br
  br
  div.row
    form#issue-form.form-horizontal.container(method="post", action="/details")
      mixin text_control("key", "Key", "OEP-1234")
      .controls
        - if(typeof(error) != 'undefined')
          p.error #{error}
        button.btn-primary#get-details Get Details

    form#jql-form.form-horizontal.container(method="post", action="/list")
      mixin text_control("jql", "Query", "Project=test", {type: 'textarea', rows: 5, cols: 50})
      .controls
        - if(typeof(error) != 'undefined')
          p.error #{error}
        button.btn-primary#get-issues Get Issues

    form#query-builder.form-horizontal.container(method="post", action="/list")